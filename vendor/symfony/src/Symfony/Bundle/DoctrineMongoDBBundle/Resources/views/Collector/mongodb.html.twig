{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
<img style="margin: 0 5px 0 10px; vertical-align: middle; height: 24px" width="24" height="24" alt="Mongo" src="data:image/png;base64," />
<span style="color: {{ collector.querycount < 10 ? '#000' : '#d22' }}">{{ collector.querycount }}</span>
{% endblock %}

{% block menu %}
<div class="count">{{ collector.querycount }}</div>
<img style="margin: 0 5px 0 0; vertical-align: middle; width: 32px" width="32" height="32" alt="Mongo" src="{{ asset('bundles/webprofiler/images/db.png') }}" />
Doctrine MongoDB
{% endblock %}

{% block panel %}
    <h2>Queries</h2>

    {% if not collector.queries %}
        <em>Query logging is disabled.</em>
    {% elseif not collector.querycount %}
        <em>No queries.</em>
    {% else %}
        <ul class="alt">
            {% for i, query in collector.queries %}
                <li class="{{ i is odd ? 'odd' : 'even' }}">
                    <div>
                        <code>{{ query }}</code>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
